@model Web.Models._MaterialMaster

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12" id="myForm">
                <form asp-action="Edit" asp-controller="MaterialMaster" method="post" id="addEntityForm">
                    <div class="form-group" hidden>
                        <label asp-for="@Model.Id"></label>
                        <input asp-for="@Model.Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Code"></label>
                        <input asp-for="@Model.Code" class="form-control" disabled/>
                        <input asp-for="@Model.Code" class="form-control" hidden />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ShotText"></label>
                        <input asp-for="@Model.ShotText" class="form-control" />
                        <span asp-validation-for="ShotText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.LongText"></label>
                        <input asp-for="@Model.LongText" class="form-control" />
                        <span asp-validation-for="LongText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ReorderLevel"></label>
                        <input asp-for="@Model.ReorderLevel" class="form-control" />
                        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.MinOrderQuntity"></label>
                        <input asp-for="@Model.MinOrderQuntity" class="form-control" />
                        <span asp-validation-for="MinOrderQuntity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Unit"></label>
                        <input asp-for="@Model.Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="@Model.IsActive" class="form-check-label">Is Active</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Update </button>
                    <button type="button" class="btn btn-secondary close" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</section>
